<h1 class="mb-3" style="color:red;"><%= @restaurant.name %></h1>
<div class="container">
  <div class="col-8 offset-2">
    <div class="mb-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating , collection: (1..5)%>
        <%= f.input :content %>
        <%= f.button :submit, "Submit", class: "btn btn-danger mt-3" %>
    <% end %>
  </div>
</div>
<%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-outline-info mt-3" %>
